#forums_page
  .row
    .col.s12.m4.blue.lighten-5
      %h5
        Categories
      %ul
      - @categories.each do |category|
        %li
          = category.title
          %ul
          - category.forum_topics.each do |topic|
            %li
              = topic.title
    .col.s12.m4.green.lighten-3
      %h5 Latest Threads
      %ul
        - @threads.each do |thread|
          %li
            = image_tag user_avatar(thread.user), class: 'circle'
            = thread.subject
    .col.s12.m4.red.lighten-3
      %h5 Top Threads
      %ul
        - @threads.each do |thread|
          %li
            = image_tag user_avatar(thread.user), class: 'circle'
            = thread.subject
