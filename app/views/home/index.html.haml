#landing-page
  .top-row.row
    %ul.left.col.l3.s12.landing-left-add-space
      - arr = %w[blue green red]
      - arr.each do |color|
        %li.hoverable{class: color}
          test
    .right.col.l9.s12
      .carousel
        - 3.times do
          .main-box.carousel-item{style: "background-image: url(#{asset_path('g3')})"}

  %ul.row#forum-info
    %li.col.m6.s12.green.hoverable
      top forum post
    = link_to @latest_forum_thread, {class: 'col m6 s12 blue-grey lighten-4 hoverable'} do
      .row
        .col.s3
          Latest Thread
        .col.s2.offset-s7
          = local_time_ago(@latest_forum_thread.created_at)

      .row
        .col.s12.center-align
          %h5
            = @latest_forum_thread.subject
          = sanitize(@latest_forum_thread.forum_posts.first.body.truncate(120))

