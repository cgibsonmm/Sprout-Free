= link_to forum_thread, { class: 'forum-post list-group-item' } do
  = render 'forum_threads/gravatar/avatar', forum_thread: forum_thread
  .ml-2
    = forum_thread.subject
  .ml-5
    = forum_thread.user.username
  .left-area
    - if forum_thread.forum_posts.first != nil
      = strip_tags(forum_thread.forum_posts.first.body.truncate(100))
