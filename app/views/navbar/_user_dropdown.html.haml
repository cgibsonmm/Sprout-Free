%ul#user-navbar-dropdown.dropdown-content
  - if user_admin?
    = render 'navbar/admin_links'
  %li
    %ul#horizontal-user-links
      %li
        = link_to material_icon.bookmarks,  activities_index_path
      %li
        = link_to material_icon.person, user_profile_path(current_user)
      %li
        = link_to material_icon.build, '#'
      %li
        = link_to material_icon.exit_to_app, destroy_user_session_path, method: :delete, data: {confirm: 'Are you sure you want to sign out?'}
  %li.divider{'tab-index': -1}
  %li
    = link_to 'Something else', '#'
