%nav#site-navbar.bg-light.navbar.navbar-light.navbar-expand-lg.sticky-top.mx-2
  = link_to root_path, class: 'navbar-brand' do
    .logo
      = image_tag 'main_logo.png', id: 'logo-2'
      .tag-line.ml-2
        .first Canada's Legalized
        .second Growing Community
  .bottom-bar
    %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse.not-logo-links
      %ul#site-links.navbar-nav.ml-auto
        %li.nav-item
          = link_to 'Community Forum', forum_subjects_path, class: 'nav-link'
        %li.nav-item
          = link_to 'Cannabis News', "#", class: 'nav-link'
        %li.nav-item
          = link_to 'Starting your garden', "#", class: 'nav-link'
        %li.nav-item
          = link_to 'Classifieds & Listings', "#", class: 'nav-link'
        %li.nav-item
          = link_to 'Merch', "#", class: 'nav-link'


      %ul.navbar-nav.my-2.ml-auto
        - if user_signed_in?
          %li.nav-item.user-name
            = link_to fa_icon('user',text: current_user.username), edit_user_registration_path, class: 'nav-link mr-2'
          %li.nav-item
            = link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link mr-2'
        - else
          %li.nav-item
            = link_to 'Log In', new_user_session_path, class: 'btn btn-secondary nav-link mr-2'
          %li.nav-item
            = link_to 'Grow With Us', new_user_registration_path, class: 'btn btn-success nav-link mr-2'
