!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title SproutFree
    -# = favicon_link_tag asset_path('icon.ico')
    = csrf_meta_tags
    = csp_meta_tag
    = include_gon
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .red-flag
      .red
      .white
      .red
    .container-fluid
      = render 'parts/header'
      = render 'parts/navbar'
      = render 'parts/flash'
      .dynamic-content.mx-3
        .current-controller-area.mt-3
          - if forum_area?
            = render 'parts/forum_parts/topbar'
          = yield
        .side-bar.mt-3
          = render 'user/info'
      -# = render 'parts/footer'
