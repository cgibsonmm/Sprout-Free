#topic-show.mt-3.ml-3
  - if user_admin?
    = link_to 'Edit Topic', edit_forum_topic_path(@forum_topic)
    |
  = link_to 'Back To Forums', forums_path
  %h3
    = @forum_topic.title
  = @forum_topic.description
  %hr
  = link_to 'Create a New Thread', new_forum_topic_forum_thread_path(@forum_topic.id), class: 'btn-sm btn-success'

  -# %ul.list-group.thread-list.mt-2
  -#   -# Added for error while rendering formated text
  -#   - @topic_threads.each do |forum_thread|
  -#     = render partial: "forum_threads/forum_thread", locals: {forum_thread: forum_thread}

  .table-responsive-md
    %table.table.thread-list.mt-2.table-striped
      %thead
        %tr
          %th{scope: "col"} Subject
          %th{scope: "col"} user
          %th{scope: "col"}
            = sort_link 'created_at'
          %th{scope: "col"} Post
      %tbody
        - @topic_threads.each do |forum_thread|
          = render partial: "forum_threads/forum_thread", locals: {forum_thread: forum_thread}
