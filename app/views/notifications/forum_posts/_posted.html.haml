
= link_to forum_thread_path(notification.notifiable.forum_thread, anchor: dom_id(notification.notifiable)), class: "dropdown-item notification #{"unread" if !notification.read_at?}" do
  = image_tag notification.actor.gravatar_url
  = notification.actor.username
  = notification.action
  a #{notification.notifiable_type.underscore.humanize.downcase}
