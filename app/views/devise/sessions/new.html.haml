.row#devise-form
  .card.col.s12.l10.offset-l1
    .card-head
      %h2 Log In
    .card-body
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-inputs
          = f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }
          = f.input :password, required: false, input_html: { autocomplete: "current-password" }
          %label
            = f.input_field :remember_me, class: 'filled-in', as: :boolean if devise_mapping.rememberable?
            %span
              Remember Me?
        .form-actions.mx-auto
          = f.button :submit, "Log In", class: 'btn green darken-1'
      = render "devise/shared/links"
